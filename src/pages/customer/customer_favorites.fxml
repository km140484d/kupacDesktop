<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<BorderPane xmlns:fx="http://www.w3.org/1999/XSL/Transform" stylesheets="@../../resources/css/base"
            fx:controller="controllers.customer.CustomerFavoritesController" style="-fx-background-color: 'E0E0E0';">
    <top>
        <fx:include fx:id="customerMenu" source="../menu/customer_menu.fxml"/>
    </top>
    <center>
        <Pagination fx:id="handymenPagination">
            <fx:define>
                <GridPane fx:id="handymenGrid" hgap="10" vgap="10" maxWidth="Infinity">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="50.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="50.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES" minHeight="100" percentHeight="50"/>
                        <RowConstraints vgrow="SOMETIMES" minHeight="100" percentHeight="50"/>
                    </rowConstraints>
                    <fx:include fx:id="firstHandyman" source="favorite_handyman.fxml" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <fx:include fx:id="secondHandyman" source="favorite_handyman.fxml" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <fx:include fx:id="thirdHandyman" source="favorite_handyman.fxml" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <fx:include fx:id="fourthHandyman" source="favorite_handyman.fxml" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>
            </fx:define>
        </Pagination>
        <!--<ScrollPane fx:id="favoriteHandymenScroll" style="-fx-padding:20;">-->
            <!--<VBox fx:id="favoriteHandymen" alignment="center" spacing="5"/>-->
        <!--</ScrollPane>-->
    </center>
</BorderPane>
