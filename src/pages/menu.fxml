<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.MenuController"
      stylesheets="@../resources/css/menu" styleClass="menu_background">
    <GridPane  hgap="10" vgap="10" styleClass="menu_item_background" >
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="34.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Button fx:id="loginButton" styleClass="menu_item" text="Prijava" onMouseClicked="#switchToPrijava" alignment="CENTER" prefWidth="Infinity">
            <GridPane.columnIndex>0</GridPane.columnIndex>
            <GridPane.rowIndex>0</GridPane.rowIndex>
        </Button>
        <Button fx:id="regButton" styleClass="menu_item" text="Registracija" onMouseClicked="#switchToRegistracija" alignment="CENTER" prefWidth="Infinity">
            <GridPane.columnIndex>1</GridPane.columnIndex>
            <GridPane.rowIndex>0</GridPane.rowIndex>
        </Button>
        <Button fx:id="searchButton" styleClass="menu_item" text="Pretraga majstora" onMouseClicked="#switchToPretragaMajstora" alignment="CENTER" prefWidth="Infinity">
            <GridPane.columnIndex>2</GridPane.columnIndex>
            <GridPane.rowIndex>0</GridPane.rowIndex>
        </Button>
    </GridPane>
</VBox>
