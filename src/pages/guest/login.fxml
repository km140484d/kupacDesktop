<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<BorderPane xmlns:fx="http://www.w3.org/1999/XSL/Transform" stylesheets="@../../resources/css/base"
            fx:controller="controllers.guest.LoginController" style="-fx-background-color: 'E0E0E0';">
    <top>
        <fx:include fx:id="menu" source="../menu.fxml"/>
    </top>
    <center>
        <VBox styleClass="panel" spacing="20" alignment="CENTER" fx:id="centerVBox">
            <children>
                <Label text="Servis majstora" styleClass="title"/>
                <GridPane  hgap="5" vgap="10" alignment="CENTER">
                    <Label text="Korisnički nalog:" styleClass="label_field">
                        <GridPane.columnIndex>0</GridPane.columnIndex>
                        <GridPane.rowIndex>0</GridPane.rowIndex>
                    </Label>
                    <Label text="Lozinka:" styleClass="label_field">
                        <GridPane.columnIndex>0</GridPane.columnIndex>
                        <GridPane.rowIndex>1</GridPane.rowIndex>
                    </Label>
                    <TextField fx:id="logUsername">
                        <GridPane.columnIndex>1</GridPane.columnIndex>
                        <GridPane.rowIndex>0</GridPane.rowIndex>
                    </TextField>
                    <PasswordField fx:id="logPassword">
                        <GridPane.columnIndex>1</GridPane.columnIndex>
                        <GridPane.rowIndex>1</GridPane.rowIndex>
                    </PasswordField>
                </GridPane>
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Prijava" styleClass="button_base" style="-fx-graphic: url('@../../resources/images/login.png')"/>
                    <Button text="Registracija" styleClass="button_base" style="-fx-graphic: url('@../../resources/images/register.png')"></Button>
                </HBox>
            </children>
        </VBox>
    </center>
    <left><TextField visible="false"/></left>
    <right><TextField visible="false"/></right>
    <bottom><TextField visible="false"/></bottom>
</BorderPane>