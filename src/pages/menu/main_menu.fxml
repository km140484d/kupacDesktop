<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.menu.MainMenuController"
      stylesheets="@../../resources/css/menu" styleClass="menu_background">
    <GridPane  hgap="10" vgap="10" styleClass="menu_item_background" >
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="34.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Button fx:id="loginButton" GridPane.columnIndex="0" GridPane.rowIndex="0" onMouseClicked="#switchToPrijava"
                text="Prijava" prefWidth="Infinity" styleClass="menu_item" alignment="CENTER"/>
        <Button fx:id="regButton" GridPane.columnIndex="1" GridPane.rowIndex="0" onMouseClicked="#switchToRegistracija"
                styleClass="menu_item" text="Registracija"  alignment="CENTER" prefWidth="Infinity"/>
        <Button fx:id="searchButton" GridPane.columnIndex="2" GridPane.rowIndex="0" onMouseClicked="#switchToPretraga"
                styleClass="menu_item" text="Pretraga majstora" alignment="CENTER" prefWidth="Infinity"/>
    </GridPane>
</VBox>
